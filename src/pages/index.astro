---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Blog">
  <main
    class="flex-col items-center justify-center h-screen text-center text-gray-600 dark:bg-gray-900 font-mono"
  >
    <h1 class="text-2xl">Blog</h1>
    <p class="text-lg mt-2 text-gray-500">This is a quick blog to test Astro</p>
    <button
      class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded"
      >See posts</button
    >
  </main>
</Layout>
